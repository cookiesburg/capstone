<body class="cooker-edit"> 
  <div class="panel panel-default col-md-5 col-md-offset-3">

    <div class="panel-body">
      <div class="container">
        <div class="row">
          <div class="col-sm-6 col-md-4">   
            <h2>Edit Cooker Profile</h2>
                
            <%= form_for (current_user.cooker), url: cooker_path(current_user.cooker.id), method: :patch do |f| %>


              <div class="form-group">
              <%= f.label :food_description%><br />
              <%= f.text_field :food_description, autofocus: true, class:"form-control" %>
            </div>
            <div class="form-group">
            <%= f.label :price_per_week%><br />
            <%= f.select(:price_per_week, ['$','$$','$$$'], :class=>"form-control" )%>
          </div>
            <div class="form-group">
              <%= f.label :dietary_options%><br />
              <%= f.select(:dietary_options, ['None','Vegetarian','Pescatarian','Vegan'], :class=>"form-control" )%>
            </div>
            <div class="form-group">
              <%= f.label :neighborhood%><br />
              <%= f.select(:neighborhood, ['El Poblado','Centro','Envigado', 'Laurales'], :class=>"form-control" )%>
            </div>
            <div class="form-group">
              <%= f.label :Are_you_willing_to_deliver?%><br />
              <%= f.select(:delivery_available, ['Yes','No'], :class=>"form-control" )%>
            </div>
            <div class="form-group">
              <%= f.label :Upload_profile_photo%><br />
              <%= f.text_field :profile_photo, autofocus: true, class:"form-control" %>
            </div>
            <div class="actions">
              <%= f.submit "Update", class:"btn btn-info subscribe-button sign-up-btn" %>
            </div>         
          <% end %>

            <%= link_to "Back", :back %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>